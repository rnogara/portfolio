{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build && cd ../frontend && npm install && npm run build",
  "outputDirectory": "frontend/.next",
  "functions": {
    "backend/src/main.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend"
    }
  ]
}